               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="buttonDeleteTask" mnemonicParsing="false" onAction="#clickDeleteButton" prefHeight="26.0" prefWidth="25.0" style="-fx-background-color: transparent;">
               <graphic>
                  <FontAwesomeIconView fill="RED" glyphName="TRASH" size="18" />
               </graphic>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
            <Button fx:id="buttonRestoreTask" mnemonicParsing="false" onAction="#clickRestoreTask" style="-fx-background-color: transparent;">
               <graphic>
                  <FontAwesomeIconView fill="#04ff00" glyphName="RETWEET" size="18" />
