<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" styleClass="background-color_3" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.idatt1002.controllers.ConfirmationRepeatDelController">
   <children>
      <VBox prefHeight="200.0" prefWidth="400.0" AnchorPane.bottomAnchor="50.0" AnchorPane.leftAnchor="20.0" AnchorPane.rightAnchor="20.0" AnchorPane.topAnchor="5.0">
         <children>
            <Text fx:id="headerText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="Delete Repeatable" textAlignment="CENTER" wrappingWidth="360.0">
               <font>
                  <Font size="24.0" />
               </font>
            </Text>
            <Text fx:id="descriptionText" fill="WHITE" strokeType="OUTSIDE" strokeWidth="0.0" text="This is a repeatable task. This means that if you decide to just delete this task it will recreate itself with a new deadline" textAlignment="CENTER" wrappingWidth="360.0" />
            <CheckBox fx:id="checkBoxSingle" disable="true" maxWidth="1.7976931348623157E308" mnemonicParsing="false" opacity="0.6" selected="true" text="Delete just this (new task will be created)" textAlignment="CENTER" textFill="WHITE">
               <padding>
                  <Insets top="20.0" />
               </padding>
               <VBox.margin>
                  <Insets left="60.0" />
               </VBox.margin>
            </CheckBox>
            <CheckBox fx:id="checkBoxAll" maxWidth="1.7976931348623157E308" mnemonicParsing="false" text="Stop all future tasks (no new tasks will be created)" textAlignment="CENTER" textFill="WHITE">
               <padding>
                  <Insets top="5.0" />
               </padding>
               <VBox.margin>
                  <Insets left="60.0" />
               </VBox.margin>
            </CheckBox>
         </children>
      </VBox>
      <Button fx:id="confirmButton" layoutX="102.0" layoutY="163.0" mnemonicParsing="false" onAction="#clickConfirmButton" prefWidth="70.0" text="Confirm" AnchorPane.leftAnchor="100.0" />
      <Button fx:id="cancelButton" layoutX="221.0" layoutY="163.0" mnemonicParsing="false" onAction="#clickCancelButton" prefWidth="70.0" stylesheets="@../css/main.css" text="Cancel" AnchorPane.rightAnchor="100.0" />
   </children>
</AnchorPane>
