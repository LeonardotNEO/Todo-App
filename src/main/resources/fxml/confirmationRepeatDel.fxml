<?xml version="1.0" encoding="UTF-8"?>

<?import com.jfoenix.controls.JFXCheckBox?>
<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="250.0" prefWidth="450.0" styleClass="background-color_3" stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.idatt1002.controllers.ConfirmationRepeatDelController">
   <children>
      <Text fx:id="headerText" fill="WHITE" layoutX="39.0" layoutY="40.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-color" text="Delete Repeatable" textAlignment="CENTER" wrappingWidth="360.0">
         <font>
            <Font size="24.0" />
         </font>
      </Text>
      <Text fx:id="descriptionText" fill="WHITE" layoutX="22.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" styleClass="text-color" text="This is a repeatable task. This means that if you decide to just delete this task it will recreate itself with a new deadline" textAlignment="CENTER" wrappingWidth="395.0">
         <font>
            <Font size="16.0" />
         </font>
      </Text>
      <JFXCheckBox fx:id="checkBoxSingle" checkedColor="#001021" disable="true" layoutX="36.0" layoutY="140.0" selected="true" styleClass="text-color" text="Delete just this (new task will be created)">
         <font>
            <Font size="16.0" />
         </font>
      </JFXCheckBox>
      <JFXCheckBox fx:id="checkBoxAll" checkedColor="#001021" layoutX="36.0" layoutY="165.0" styleClass="text-color" text="Stop all future tasks (no new tasks will be created)">
         <font>
            <Font size="16.0" />
         </font>
      </JFXCheckBox>
      <Button fx:id="confirmButton" layoutX="121.0" layoutY="200.0" mnemonicParsing="false" onAction="#clickConfirmButton" styleClass="button1" text="Confirm" AnchorPane.leftAnchor="121.0">
         <graphic>
            <FontAwesomeIconView fill="LIME" glyphName="THUMBS_UP" />
         </graphic>
      </Button>
      <Button fx:id="cancelButton" layoutX="225.0" layoutY="200.0" mnemonicParsing="false" onAction="#clickCancelButton" styleClass="button1" stylesheets="@../css/main.css" text="Cancel" AnchorPane.rightAnchor="138.0">
         <graphic>
            <FontAwesomeIconView fill="RED" glyphName="BAN" />
         </graphic>
      </Button>
   </children>
</AnchorPane>
