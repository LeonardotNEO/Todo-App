<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.text.Text?>

<AnchorPane prefHeight="200.0" prefWidth="400.0" style="-fx-background-color: OLIVE;" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.idatt1002.controllers.ConfirmationController">
   <children>
      <Button fx:id="noButton" layoutX="230.0" layoutY="121.0" mnemonicParsing="false" onAction="#noOption" text="No, it was a mistake!" AnchorPane.bottomAnchor="25.0" AnchorPane.rightAnchor="45.0" />
      <Button fx:id="yesButton" layoutX="48.0" layoutY="121.0" mnemonicParsing="false" onAction="#yesOption" text="Yes, delete it!" AnchorPane.bottomAnchor="25.0" AnchorPane.leftAnchor="45.0" />
      <CheckBox fx:id="checkBox" layoutX="68.0" layoutY="123.0" mnemonicParsing="false" onAction="#dontShowAgain" text="This message is annoying, dont show it again!" textAlignment="CENTER" />
      <Text fx:id="confirmQuestion" layoutX="93.0" layoutY="70.0" strokeType="OUTSIDE" strokeWidth="0.0" text="Are you sure you want to delete this task?" textAlignment="CENTER" />
      <Text fx:id="extraText" layoutX="91.0" layoutY="105.0" strokeType="OUTSIDE" strokeWidth="0.0" text="It wil only go in to the trash bin for now..." textAlignment="CENTER" />
   </children>
   <opaqueInsets>
      <Insets />
   </opaqueInsets>
</AnchorPane>
