<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>

<BorderPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.idatt1002.controllers.TasksController">
   <center>
      <VBox fx:id="background" alignment="TOP_CENTER" prefWidth="737.0" BorderPane.alignment="TOP_CENTER">
         <children>
            <ScrollPane fx:id="scrollpane" minHeight="0.0" prefWidth="737.0" style="-fx-background-color: transparent; -fx-background: transparent;">
               <content>
                  <VBox fx:id="tasksVBox" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="0.0" minWidth="-Infinity" prefWidth="735.0" spacing="10.0" style="-fx-background-color: transparent;">
                     <padding>
                        <Insets left="10.0" right="10.0" top="10.0" />
                     </padding>
                  </VBox>
               </content>
            </ScrollPane>
            <Text fx:id="messageText" strokeType="OUTSIDE" strokeWidth="0.0" text="Text">
               <font>
                  <Font size="22.0" />
               </font>
               <VBox.margin>
                  <Insets top="15.0" />
               </VBox.margin>
            </Text>
            <Button fx:id="buttonAddTask" mnemonicParsing="false" onAction="#buttonAddTask" prefWidth="150.0" style="-fx-background-radius: 30;" styleClass="background-color_1" text="Task" textFill="WHITE">
               <graphic>
                  <FontAwesomeIconView fill="#09ff00" glyphName="PLUS" />
               </graphic>
               <VBox.margin>
                  <Insets bottom="5.0" top="5.0" />
               </VBox.margin>
               <font>
                  <Font size="16.0" />
               </font>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor>
            </Button>
         </children>
      </VBox>
   </center>
</BorderPane>
