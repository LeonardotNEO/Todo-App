<?xml version="1.0" encoding="UTF-8"?>

<?import de.jensd.fx.glyphs.fontawesome.FontAwesomeIconView?>
<?import javafx.geometry.Insets?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane stylesheets="@../css/main.css" xmlns="http://javafx.com/javafx/15.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ntnu.idatt1002.controllers.ProjectMenuButtonController">
   <children>
      <VBox>
         <children>
            <HBox alignment="CENTER_LEFT" spacing="10.0">
               <children>
                  <Button fx:id="projectTitle" mnemonicParsing="false" onAction="#buttonClickProject" styleClass="categoryButton" text="Button">
                     <graphic>
                        <FontAwesomeIconView id="icon" fill="WHITE" glyphName="INDUSTRY" />
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
                  <Button fx:id="buttonNewCategory" mnemonicParsing="false" onAction="#buttonNewCategory" style="-fx-background-radius: 10; -fx-font-size: 12;" styleClass="button1" text="Category" textFill="WHITE">
                     <graphic>
                        <FontAwesomeIconView fill="#09ff00" glyphName="PLUS" />
                     </graphic>
                     <cursor>
                        <Cursor fx:constant="HAND" />
                     </cursor>
                  </Button>
               </children>
            </HBox>
            <VBox fx:id="categories">
               <padding>
                  <Insets left="20.0" />
               </padding>
            </VBox>
         </children>
      </VBox>
   </children>
</AnchorPane>
